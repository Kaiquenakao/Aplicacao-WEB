package model;

import java.sql.ResultSet;
import java.sql.SQLException;

import database.DBQuery;

public class Localizacao {
	private String nome;
	
	
	private String tableName = "";
	private String fieldsName = "";
	private String keyField = "";
	private String where = "";
	private DBQuery dbQuery = null;
	
	
	public Passagem() {
		this.tableName = "passagens";
		this.fieldsName = "idPassagem, localizacao, preco, promocao";
		this.keyField = "idPassagem";
		this.dbQuery = new DBQuery(this.tableName, this.fieldsName, this.keyField);
	}
	
	public Passagem(String localizacao, String preco, String promocao) {
		this.tableName = "passagens";
		this.fieldsName = "localizacao, preco, promocao";
		this.keyField = "idPassagem";
		this.dbQuery = new DBQuery(this.tableName, this.fieldsName, this.keyField);

		this.setLocalizacao(localizacao);
		this.setPreco(Float.valueOf(preco));
		this.setPromocao(Integer.parseInt(promocao));
	}
	

	
	
	public String teste() {
		String saida = "olá" + this.getLocalizacao() + this.getPreco();
		
		return(saida);
	}
	
	public void save() {
		this.dbQuery.insert(this.toArray());
	}
	
	public String[] toArray() {
		return(
			new String[] {
				""+this.getLocalizacao(),
				""+this.getPreco(),
				""+this.getPromocao()
			}
		);
	}

	
	public String listAll() {
		ResultSet rs = this.dbQuery.select("");
		String saida = "<br>";
		saida += "<table border=1>";
		
		try {
			while(rs.next()) {
				saida += "<tr>";
				saida += "<td>" + rs.getString("idPassagem") + "</td>";
				saida += "<td>" + rs.getString("localizacao") + "</td>";
				saida += "<td>" + rs.getString("promocao") + "</td>";
				saida += "<td><a href='teste.jsp?conteudo="+ rs.getString("idPassagem") + "'>" + "enviar</a></td>";
				saida += "</td> <br>";
			}
			
		}catch (SQLException e) {
			e.printStackTrace();
		}
		saida += "</table>";
		return (saida);
	}
	
	
	
	public String idPassagem() {
		ResultSet rs = this.dbQuery.selectID("idPassagem=(select max(idPassagem) from passagens)");
		String id = "";
		try {
			while(rs.next()) {
				id = rs.getString("idPassagem");
			}
		}catch (SQLException e) {
			e.printStackTrace();
		}
		return (id);
	}
	
	

	
	
}
